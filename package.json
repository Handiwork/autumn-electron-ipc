{
  "name": "autumn-electron-ipc",
  "version": "2.0.0",
  "description": "looks like a remote object, works as async IPC calls",
  "keywords": [
    "electron",
    "ipc"
  ],
  "type": "module",
  "main": "dist/cjs",
  "module": "dist/esm",
  "types": "dist/types/index.d.ts",
  "author": "Handiwork",
  "license": "MIT",
  "private": false,
  "repository": {
    "url": "https://github.com/Handiwork/autumn-electron-ipc.git",
    "type": "git"
  },
  "homepage": "https://handiwork.github.io/autumn-electron-ipc",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "scripts": {
    "build": "npm run clean && npm run build:cjs && npm run build:esm && npm run build:types && npm run build:index",
    "build:clean": "rimraf dist",
    "build:cjs": "tsc -p tsconfig.build.json --module commonjs --outDir dist/cjs",
    "build:esm": "tsc -p tsconfig.build.json --outDir dist/esm",
    "build:types": "tsc -p tsconfig.build.json --declaration --emitDeclarationOnly --declarationDir dist/types",
    "build:index": "ts-node ./scripts/write-index.ts",
    "watch": "npm run clean && tsc --watch",
    "clean": "rimraf dist",
    "test": "jest",
    "doc": "typedoc --options typedoc.json --entryPointStrategy expand ./src --theme default --tsconfig tsconfig.build.json"
  },
  "devDependencies": {
    "@types/jest": "^29.2.2",
    "@types/lodash": "^4.14.200",
    "@types/node": "^16",
    "@typescript-eslint/eslint-plugin": "^5.7.0",
    "eslint": "^8.4.1",
    "eslint-config-atmn": "^1.3.2",
    "jest": "^29.3.1",
    "jest-environment-jsdom": "^29.3.1",
    "prettier": "^3.0.3",
    "rimraf": "^3.0.2",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "typedoc": "^0.25.2",
    "typescript": "^5.2.2"
  },
  "peerDependencies": {
    "electron": ">=14",
    "typescript": ">=3.7"
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "lodash": "^4.17.21"
  }
}
