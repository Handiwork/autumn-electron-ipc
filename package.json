{
  "name": "autumn-electron-ipc",
  "version": "1.0.6",
  "description": "looks like a remote object, works as async IPC calls",
  "keywords": [
    "electron",
    "ipc"
  ],
  "main": "dist/cjs",
  "module": "dist/esm",
  "types": "dist/index.d.ts",
  "author": "Handiwork",
  "license": "MIT",
  "private": false,
  "repository": {
    "url": "https://github.com/Handiwork/autumn-electron-ipc.git",
    "type": "git"
  },
  "homepage": "https://handiwork.github.io/autumn-electron-ipc",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "scripts": {
    "build": "npm run clean && npm run build:cjs && npm run build:esm",
    "build:clean": "rimraf dist",
    "build:cjs": "tsc --module commonjs --outDir dist/cjs --declaration --declarationDir dist --sourceMap false",
    "build:esm": "tsc --outDir dist/esm --sourceMap false",
    "watch": "npm run clean && tsc --watch",
    "clean": "rimraf dist",
    "test": "jest",
    "doc": "typedoc --entryPointStrategy expand ./src --out docs/api --theme default"
  },
  "devDependencies": {
    "@types/jest": "^27.0.3",
    "@types/node": "^14.18.2",
    "@typescript-eslint/eslint-plugin": "^5.7.0",
    "eslint": "^8.4.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jest": "^25.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.4.5",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.1.2",
    "typedoc": "^0.22.10",
    "typescript": "^4.5.4"
  },
  "peerDependencies": {
    "electron": ">=16"
  },
  "files": [
    "dist"
  ]
}
