{
  "compilerOptions": {
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "module": "ES2015",
    "target": "ES2015",
    "lib": [
      "ES2015",
      "DOM"
    ],
    "sourceMap": true,
    "jsx": "react",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "downlevelIteration": true,
    "baseUrl": ".",
    "outDir": "dist"
  },
  "exclude": [
    "node_modules/**/*",
    "test-build/**/*",
    "dist/**/*",
    "api-docs/**/*"
  ]
}