{
  "compilerOptions": {
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "target": "ES2015",
    "lib": [
      "ESNext",
      "DOM",
    ],
    "sourceMap": true,
    "rootDir": "src",
    "moduleResolution": "Bundler",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "downlevelIteration": true,
    "outDir": "dist",
    "resolveJsonModule": true
  },
  "exclude": [
    "node_modules/**/*",
    "test-build/**/*",
    "dist/**/*",
    "api-docs/**/*",
    "examples/**/*",
    "scripts/**/*",
    "jest.config.ts"
  ]
}
